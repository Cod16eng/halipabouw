<%= render 'shared/errors', obj: @material %>
<%= form_with(model: material, local: true) do |form| %>
  <div class="col-md-8 offset-md-2">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Price" %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :descrp %>
      <%= form.text_area :descrp, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :nr_inv_mat %>
      <%= form.number_field :nr_inv_mat, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :supplier %>
      <%= form.text_field :supplier, class: "form-control" %>
    </div>

    <div class="form-group">
      <% if params[:action] == "new" %>
        <%= form.hidden_field :project_id, :value => params[:project_id] %>
      <% else  %>
        <%= form.hidden_field :project_id, class: "form-control" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.button(@material.new_record? ? '<i class="fas fa-plus"></i> Create Material'.html_safe : '<i class="fas fa-paper-plane"></i> Update material'.html_safe, class: "btn btn-outline-success btn-sm btn-block") %>
    </div>
<% end %>
</div>
