<%= render 'shared/errors', obj: @labour %>
<%= form_with(model: labour, local: true) do |form| %>
  <div class="col-md-8 offset-md-2">

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :labour_name %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :labour_amount %>
  </div>

  <div class="field">
    <%= form.label :descrp %>
    <%= form.text_area :descrp, id: :labour_descrp %>
  </div>

  <div class="field">
    <%= form.label :nr_inv_lab %>
    <%= form.number_field :nr_inv_lab, id: :labour_nr_inv_lab %>
  </div>

  <div class="form-group">
    <% if params[:action] == "new" %>
      <%= form.hidden_field :project_id, :value => params[:project_id] %>
    <% else  %>
      <%= form.hidden_field :project_id %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
