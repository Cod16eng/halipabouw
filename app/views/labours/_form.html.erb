<%= render 'shared/errors', obj: @labour %>
<%= form_with(model: labour, local: true) do |form| %>
  <div class="col-md-8 offset-md-2">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :amount %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :descrp %>
      <%= form.text_area :descrp, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Nr invoice labour" %>
      <%= form.number_field :nr_inv_lab, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Date" %>
      <%= form.date_field :datel, class: "form-control" %>
    </div>

    <div class="form-group">
      <% if params[:action] == "new" %>
        <%= form.hidden_field :project_id, :value => params[:project_id] %>
      <% else  %>
        <%= form.hidden_field :project_id, class: "form-control" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.button(@labour.new_record? ? '<i class="fas fa-plus"></i> Create Labour'.html_safe : '<i class="fas fa-paper-plane"></i> Update labour'.html_safe, class: "btn btn-outline-success btn-sm btn-block") %>
    </div>
  <% end %>
</div>
