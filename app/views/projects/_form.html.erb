<%= render 'shared/errors', obj: @project %>
<div class="col-md-8 offset-md-2">
  <%= form_with(model: project, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <% if params[:action] == "new" %>
        <%= form.hidden_field :client_id, :value => params[:client_id] %>
      <% else  %>
        <%= form.hidden_field :client_id %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :desc %>
      <%= form.text_area :desc, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :budget %>
      <%= form.text_field :budget, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.button(@project.new_record? ? '<i class="fas fa-plus"></i> Create project'.html_safe : '<i class="fas fa-paper-plane"></i> Update project'.html_safe, class: "btn btn-outline-success btn-sm btn-block") %>
    </div>
  <% end %>
</div>