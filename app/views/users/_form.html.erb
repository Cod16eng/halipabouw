<%= render 'shared/errors', obj: @user %>
<br>
<%= form_with(model: user, local: true) do |form| %>




    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password_digest, class: "form-control" %>
    </div>

    <% if @user.new_record? %>
      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :admin %>
      <%= form.check_box :admin, id: :user_admin %>
    </div>



    <div class="form-group">
      <%= form.button(@user.new_record? ? '<i class="fas fa-user-plus"></i> Create user'.html_safe : '<i class="fas fa-paper-plane"></i> Update profile'.html_safe, class: "btn btn-outline-success btn-sm btn-block") %>
    </div>
    <% end %>
