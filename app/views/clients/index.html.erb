

<h1 align="center">Clients</h1>


<div class="float-right"><%= link_to 'Add Client', new_client_path, class: "btn btn-outline-primary btn-sm"%></div>
<div class="clearfix"></div>
<br>
<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Name</th>
      <th>Projects</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= link_to 'Projects', client,  class: "btn btn-outline-primary btn-sm"  %></td>
        <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, client, class: "btn btn-outline-primary btn-sm rounded-circle" %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_client_path(client), class: "btn btn-outline-success btn-sm rounded-circle" %></td>
        <td><%= link_to '<i class="fas fa-times"></i>'.html_safe, client, method: :delete, data: { confirm: 'Are you sure? You are about to delete the client and all his projects' }, class: "btn btn-outline-danger btn-sm rounded-circle"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


